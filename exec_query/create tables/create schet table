CREATE TABLE XML_SCHET (
  CODE      VARCHAR2(10 BYTE),
  GLPU      VARCHAR2(6 BYTE) NOT NULL,
  YER       VARCHAR2(6 BYTE),
  MONT      VARCHAR2(2 BYTE),
  NSCHET    VARCHAR2(15 BYTE),
  DSCHET    DATE,
  PLAT      VARCHAR2(10 BYTE),
  SUMMAV    FLOAT(49),
  COMENTS   VARCHAR2(250 BYTE),
  SANK_MEK  FLOAT(49),
  SANK_MEE  FLOAT(49),
  SUMMAP    FLOAT(49),
  SANK_EKMP FLOAT(49),
  PERIOD    NVARCHAR2(12) NOT NULL,
  CONSTRAINT PK_XML_SCHET PRIMARY KEY (GLPU, PERIOD)
)
TABLESPACE MAKSM_TABSPACE
STORAGE (INITIAL 64 K
         MAXEXTENTS UNLIMITED)
LOGGING;


CREATE INDEX IDX_XML_SCHET_GLPU ON XML_SCHET (GLPU)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_SCHET_PERIOD ON XML_SCHET (PERIOD)
TABLESPACE MAKSM_TABSPACE;