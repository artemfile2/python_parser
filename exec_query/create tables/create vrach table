CREATE TABLE XML_VRACH (
  ID     NUMBER(10) GENERATED ALWAYS AS IDENTITY (
  MAXVALUE 1000000000000000000000000000),
  KOD    VARCHAR2(15 BYTE) NOT NULL,
  FIO    VARCHAR2(60 BYTE),
  MCOD   VARCHAR2(6 BYTE) NOT NULL,
  IDMSP  VARCHAR2(10 BYTE),
  SPEC   VARCHAR2(60 BYTE),
  DOST   NUMBER(22, 0),
  GLPU   VARCHAR2(10 BYTE) NOT NULL,
  PERIOD NVARCHAR2(12)  NOT NULL,
  CONSTRAINT PK_XML_VRACH PRIMARY KEY (ID, KOD, MCOD, PERIOD) USING INDEX TABLESPACE MAKSM_TABSPACE STORAGE (INITIAL 64 K
                                                                                                  MAXEXTENTS UNLIMITED)
)

TABLESPACE MAKSM_TABSPACE
STORAGE (INITIAL 64 K
         MAXEXTENTS UNLIMITED)
LOGGING;

CREATE INDEX IDX_XML_VRACH_KOD ON XML_VRACH (KOD)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_VRACH_MCOD ON XML_VRACH (MCOD)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_VRACH_PERIOD ON XML_VRACH (PERIOD)
TABLESPACE MAKSM_TABSPACE;