CREATE TABLE XML_HRRGD (
  IDSERV VARCHAR2(36 BYTE) NOT NULL,
  IDNOMK VARCHAR2(36 BYTE) NOT NULL,
  HKOD   VARCHAR2(25 BYTE),
  NAME_O VARCHAR2(250 BYTE),
  SMO    VARCHAR2(5 BYTE),
  GLPU   VARCHAR2(6 BYTE),
  MCOD   VARCHAR2(6 BYTE)  NOT NULL,
  KSGH   VARCHAR2(36 BYTE),
  PERIOD NVARCHAR2(12)      NOT NULL,
  CONSTRAINT PK_XML_HRRGD PRIMARY KEY (IDNOMK, MCOD)
)
TABLESPACE MAKSM_TABSPACE
STORAGE (INITIAL 64 K
         MAXEXTENTS UNLIMITED)
LOGGING;

CREATE UNIQUE INDEX PK_XML_HRRGD_P ON XML_HRRGD (IDNOMK, MCOD, PERIOD)
TABLESPACE MAKSM_TABSPACE
LOGGING;

CREATE INDEX IDX_XML_HRRGD_IDSERV ON XML_HRRGD (IDSERV)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_HRRGD_IDNOMK ON XML_HRRGD (IDNOMK)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_HRRGD_HKOD ON XML_HRRGD (HKOD)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_HRRGD_MCOD ON XML_HRRGD (MCOD)
TABLESPACE MAKSM_TABSPACE;

CREATE INDEX IDX_XML_HRRGD_PERIOD ON XML_HRRGD (PERIOD)
TABLESPACE MAKSM_TABSPACE;